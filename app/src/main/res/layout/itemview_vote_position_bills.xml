<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vote_position_bill_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/vote_position_bill_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BILL ID: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/vp_bill_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/vp_bill_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VOTE POSITION: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/vp_bill_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/show_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show details"
                android:textStyle="italic"
                android:fontFamily="@font/quicksand"
                android:layout_gravity="end"
                android:textColor="#000"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/vote_position_bill_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BILL PURPOSE: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/vp_bill_purpose_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STATUS: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/vp_bill_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LATEST ACTION: "
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/vp_bill_latest_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto"
                android:padding="8dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>