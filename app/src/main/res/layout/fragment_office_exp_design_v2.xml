<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_oe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E4F8"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/gradient_bkg_p"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:id="@+id/oe_txt_title_name"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="48dp"-->
                <!--android:textColor="#fff"-->
                <!--android:fontFamily="@font/quicksand"-->
                <!--android:text="Title, Name "-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="42sp"/>-->

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="330dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:fontFamily="monospace"
                    android:text="O F F I C E  E X P E N S E S"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_disclaimer_year_quarter"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="290dp"
                    android:tint="@color/bkg_start_clr"
                    android:src="@drawable/ic_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="YEAR "
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/oe_yr_spinner_off_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="QUARTER"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/oe_qt_spinner_off_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16dp" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:id="@+id/container_oe_rv">

           <!-- <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_office_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">

                </android.support.v7.widget.RecyclerView>

    <!--        </ScrollView>-->

        </FrameLayout>

    </LinearLayout>

</FrameLayout>