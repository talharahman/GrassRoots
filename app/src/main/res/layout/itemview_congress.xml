<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/congress_cardview"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="8dp">

    <TextView
        android:id="@+id/congress_member_name_iv"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:text="Member Name"
        android:textColor="@color/purple_drop"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:fontFamily="@font/quicksand"/>

    <TextView
        android:id="@+id/congress_state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="NY"
        android:textSize="20sp"
        app:fontFamily="@font/montserrat" />

    <ImageView
        android:id="@+id/party_square"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/congress_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="P, Title"
        android:textStyle="italic"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/purple_drop"
        android:layout_marginTop="48dp"
        android:textSize="16sp"/>

</android.support.v7.widget.CardView>