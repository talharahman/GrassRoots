<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.grassrootsapp.grassroots">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_grassroots"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_grassroots_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="org.grassrootsapp.grassroots.activity.user.UserSignUpActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="org.grassrootsapp.grassroots.activity.user.UserAuthorization" />
        <activity
            android:name="org.grassrootsapp.grassroots.activity.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.grassrootsapp.grassroots.activity.UserActionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.grassrootsapp.grassroots.activity.PetitionHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="org.grassrootsapp.grassroots.activity.LocalRepsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.grassrootsapp.grassroots.activity.CongressActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.grassrootsapp.grassroots.activity.MainDashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.grassrootsapp.grassroots.activity.CongressTabActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="@string/facebook_provider_id"
            android:exported="true" />
    </application>

</manifest>